{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" class="form-signin" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <h2 class="form-signin-heading">Please sing in</h2>
    <div class="form-group">
        <label for="username">{{ 'Username'|trans }}</label>
        <input type="text"
               id="username"
               name="_username"
               value="{{ last_username }}"
               required="required" />
    </div>

    <div class="form-group">
        <label for="password">{{ 'Password'|trans }}</label>
        <input type="password"
               id="password"
               name="_password"
               required="required" />
    </div>

    <div class="checkbox">
        <input type="checkbox"
               id="remember_me"
               name="_remember_me"
               value="on" />
    </div>

    <input type="submit"
           class="btn btn-success"
           id="_submit"
           name="_submit"
           value="{{ 'Login'|trans }}" />
</form>

