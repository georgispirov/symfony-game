{{ include('base.html.twig') }}

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="{{ asset('css/items.css') }}">
    <link rel="stylesheet" href="{{ asset('css/grid-ordered-products.css') }}">
</head>

{% if app.session.flashbag.has('info') %}
    <div class="container col-xs-4 alert alert-info info-message-no-items-in-grid">
        {% for flashMessage in app.session.flashbag.get('info') %}
            {{ flashMessage }}
        {% endfor %}
    </div>
{% endif %}

{% if app.session.flashbag.has('removedOrder') %}
    <div class="container col-xs-4 alert alert-info success-message-removed-ordered-item">
        {% for flashMessage in app.session.flashbag.get('removedOrder') %}
            {{ flashMessage }}
        {% endfor %}
    </div>
{% endif %}

{% if app.session.flashbag.has('nonRemovedOrder') %}
    <div class="container col-xs-4 alert alert-info error-message-non-removed-ordered-item">
        {% for flashMessage in app.session.flashbag.get('nonRemovedOrder') %}
            {{ flashMessage }}
        {% endfor %}
    </div>
{% endif %}

<head>
    <title>Cart</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/topnav.css')}}">
</head>
<body>
    {% if grid is not null %}
        <div class="col-lg-6 ordered-product-items">
            {{ grid(grid) }}
        </div>
    {% endif %}
</body>