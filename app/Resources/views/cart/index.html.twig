{% include 'base.html.twig' %}

<head>
    <link rel="stylesheet" href="{{ asset('css/grid-ordered-products.css') }}">
    <link rel="stylesheet" href="{{ asset('css/items.css') }}">
</head>

{% if app.session.flashbag.has('info') %}
    <div class="col-xs-4 alert alert-info info-message-no-items-in-grid">
        {% for flashMessage in app.session.flashbag.get('info') %}
            {{ flashMessage }}
        {% endfor %}
    </div>
{% endif %}

{% if app.session.flashbag.has('removedOrder') %}
    <div class="col-xs-4 alert alert-info success-message-removed-ordered-item">
        {% for flashMessage in app.session.flashbag.get('removedOrder') %}
            {{ flashMessage }}
        {% endfor %}
    </div>
{% endif %}

{% if app.session.flashbag.has('nonRemovedOrder') %}
    <div class="col-xs-4 alert alert-info error-message-non-removed-ordered-item">
        {% for flashMessage in app.session.flashbag.get('nonRemovedOrder') %}
            {{ flashMessage }}
        {% endfor %}
    </div>
{% endif %}

<body>
    {% if grid is not null %}
        <div class="col-lg-6 ordered-product-items">
            {{ grid(grid) }}
            {% set difference = app.user.money - app.user.totalCheck %}
            <div class="col-lg-2 user-total-check">
                <b>Cash:</b> ${{ app.user.money }} <br/>
                <b>Orders:</b> ${{ app.user.totalCheck }} <br/>
                <b>Total: </b> ${{ difference }}
            </div>
        </div>
    {% endif %}
</body>