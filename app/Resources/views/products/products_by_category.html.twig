{% include 'base.html.twig' %}

{{ grid(grid) }}

<script>
    $(document).ready(function() {
        var imageColumn = $('.grid-column-image');
        var imageFile = imageColumn.text();
        $.ajax({
            url: "/app_dev.php/preview/image",
            type: "POST",
            dataType: "json",
            data: {'filename': imageFile},
            success: function (data) {
                imageColumn.text('');
                $('.grid-column-image').append('<img src="' + data + '" width="150px" height="100px" />');
            }
        });
    });
</script>