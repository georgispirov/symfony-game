{% include 'base.html.twig' %}

{% if app.session.flashbag.has('success-on-updating-product') %}
    <div class="col-xs-8 alert alert-info success-on-updating-product">
        {% for flashMessage in app.session.flashbag.get('success-on-updating-product') %}
            {{ flashMessage }}
        {% endfor %}
    </div>
{% endif %}

{% if app.session.flashbag.has('failure-on-updating-product') %}
    <div class="col-xs-8 alert alert-info failure-on-updating-product">
        {% for flashMessage in app.session.flashbag.get('failure-on-updating-product') %}
            {{ flashMessage }}
        {% endfor %}
    </div>
{% endif %}

<div class="col-lg-12 update-product">
    <h2 class="add-product-header">Update Product</h2> <br/>
    {{ form_start(form, {
        'action': path('updateProduct', { 'viewProductID': product.id }),
        }
    )
    }}

    <div class="update-product-form-widget col-lg-12">
        {{ form_widget(form) }}
    </div>
</div>