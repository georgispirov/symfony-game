{% include '::base.html.twig' %}

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="{{ asset('css/items.css') }}">
</head>

{% if app.session.flashbag.has('success') %}
    <div class="container col-xs-4 alert alert-success success-message-item-add-to-cart">
        {% for flashMessage in app.session.flashbag.get('success') %}
            {{ flashMessage }}
        {% endfor %}
    </div>
{% endif %}

{% if app.session.flashbag.has('error') %}
    <div class="container col-xs-4 alert alert-danger error-message-item-add-to-cart">
        {% for flashMessage in app.session.flashbag.get('error') %}
            {{ flashMessage }}
        {% endfor %}
    </div>
{% endif %}

{% for key, product in products %}
<body>
    <div class="row col-lg-10" style="margin-left: 400px; margin-top: -200px">
        <div class="container-fluid shop-items col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
                <a href="#">
                    <img class="card-img-top"
                         src="{{ asset('uploads/images/products/' ~ product.image) }}"
                         alt=""
                         width="700px"
                         height="400px">
                </a>
                <div class="card-body">
                    <h4 class="card-title">
                        <a href="#">{{ product.title }}</a>
                    </h4>
                    <p class="card-text">{{ product.description }}</p>
                    <h5>${{ product.price }}</h5>
                </div>
                <div class="btn btn-primary">
                    <a href="{{ path('addOrderedProduct', { 'routeParams': product.id }) }}">Add To Cart</a>
                </div>
            </div>
        </div>
    </div>
</body>



{% endfor %}
