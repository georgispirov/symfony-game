{% include 'base.html.twig' %}

<head>
    <script src="{{ asset('js/bootstrap-slider/bootstrap-slider.js') }}"></script>
    <link rel="stylesheet" href="{{ asset('js/bootstrap-slider/css/bootstrap-slider.css') }}">
</head>

{% if app.session.flashbag.has('non-successfully-sell-product') %}
    <div class="col-xs-8 alert alert-danger non-successfully-sell-product">
        {% for flashMessage in app.session.flashbag.get('non-successfully-sell-product') %}
            {{ flashMessage }}
        {% endfor %}
    </div>
{% endif %}

<div class="col-lg-12 add-product">
    <h2 class="add-product-header">Sell Product</h2> <br/>
    {{ form_start(form, {
        'action': path('sellBoughtProduct', { 'orderedProductID': orderedProduct.id }),
        }
    )
    }}

    <div class="add-product-form-widget col-lg-12">
        {{ form_widget(form) }}
    </div>
</div>